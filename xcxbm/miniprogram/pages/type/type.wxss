/* 分类 */
.contentBox{
  display: flex;}
/* 左边 */ 
.typeName{
  position: fixed;
  width: 20%;
  height: 100%;
  background:#ddd}
.typeName view{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size:26rpx;
  color: #666;
  border-bottom: 1px solid #999;
}
.typeName .itemactive{/*左边分类激活的状态*/
  color: red;
  background-color: #fff;
  border-left: 1px solid red;
}
/* 右边  */
.typeList{
  margin-left: 20%;
  width: 80%;
  padding: 10rpx;
  background-color:#fff}
.list{
  display: flex;
  margin-bottom: 10rpx;
}
.list image{
  width: 30%;
}
.list .rightInfo{
  width: 70%;
  overflow: hidden;
  padding-left: 10rpx;
}
.title{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size:30rpx;
  font-weight: 500;
  /* font-family: PingFang SC,Helvetica Neue,Arial,sans-serif; */
}
.subTitle{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  padding-left: 8rpx;
  font-size:25rpx;
  color: #999;
  margin: 8rpx 0 8rpx 0;
}
.priceBox{
  display: flex;
  justify-content: space-between;
  padding-right: 10rpx;
  color: red;
  font-size: 30rpx;
}
.addCartBtn{
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 46rpx;
  border: 1px solid red;
  border-radius: 50%;
}
/* 底部弹出层 */
.propbox{
  padding: 30rpx;
}
.propbox .floor1{
  display: flex;
}
.propbox .floor1 .img{
  width: 200rpx;
  height: 200rpx;
  
}
.titleandprice{
  width: 60%;
}
.propbox .floor1 .price{
  color: red;
}
.floor1 .closebtn{
  width: 10%;
}
.floor2{
  margin: 35rpx 0 35rpx 0;
  padding: 35rpx 0 35rpx 0;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}
.floor3{
  display: flex;
  justify-content: space-between;
  
}
.floor3 .count{
  font-size: 30rpx;
}
.floor4{
  display: flex;
}
.floor4 view{
  width: 50%;
}