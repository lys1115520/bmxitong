/* pages/user/user.wxss */
.header{
  width: 750rpx;
  height: 350rpx !important;
  background-color: pink;
}

.body{
  background-color: rgb(221, 218, 218);
  padding: 10rpx;
}
/* 卡劵部分 */
.cards{
  height: 120rpx;
  width: 730rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}
.cards>text{
  text-align: center;
}
.wenzi{
  font-size: 26rpx;
  color: #666;
}
/* 订单部分 */
.order,.tasklist,.singlelist{
  padding: 10rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}
.myorder{
  font-size: 26rpx;
  color: #666;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #999;
  margin-bottom: 20rpx;
}
.myorder,.orderbox{
  display: flex;
  justify-content: space-between;
}
.orderbox>view{
  text-align: center;
  font-size: 26rpx;
}
.orderbox image{
  width: 50rpx;
  height: 50rpx;
}


.tasklist .list{
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #333;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #999;
}
.tasklist .lastlist{
  border: none;
}
.tasklist .list view{
  width: 85%;
  margin-left: 15rpx;
}
.tasklist .list image{
  width: 50rpx;
  height: 50rpx;
}