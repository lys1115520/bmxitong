/* pages/cart/cart.wxss */
.bodycontent{
  padding: 15rpx;
  margin-bottom: 160rpx;
}
.header{
  height: 80rpx;
  border-bottom: 1px solid #ddd;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 30rpx;
}
.strname{
  width: 70%;
}
.editbtn{
  color: rgb(62, 188, 238);
}

/* 商品列表  */
.list{
  display: flex;
  margin-bottom: 10rpx;
  align-items: center;
  justify-content: space-around;
}
.van-checkbox__icon-wrap{
  background-color: #ddd;
  border-radius: 50%;
}
.list image{
  width: 30%;
}
.list .rightInfo{
  width: 60%;
  overflow: hidden;
}
.title{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size:30rpx;
  font-weight: 500;
  /* font-family: PingFang SC,Helvetica Neue,Arial,sans-serif; */
}
.subTitle{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  padding-left: 8rpx;
  font-size:25rpx;
  color: #999;
  margin: 8rpx 0 8rpx 0;
}
.priceBox{
  display: flex;
  justify-content: space-between;
  padding-right: 10rpx;
  color: red;
  font-size: 30rpx;
}
.count{
  color: #333;
  height: 60rpx;
}
.footer{
  padding-left: 15rpx;
}